<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
xmlns:m="urn:import:gwt.material.design.client.ui"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style>
	
	</ui:style>
	<g:HTMLPanel>
		<m:MaterialTab ui:field="tabIntro" shadow="1" indicatorColor="YELLOW" backgroundColor="BLUE_DARKEN_1" height="4.5em">
              <m:MaterialTabItem waves="YELLOW">
                <m:MaterialLabel text="HUCKSTER" fontSize="4em" textColor="WHITE"/>
              </m:MaterialTabItem>
              </m:MaterialTab>
              <m:MaterialRow width="60%" paddingTop="25">
	<m:MaterialPanel paddingLeft="10" paddingRight="10">
	<m:MaterialCard>
	<m:MaterialCardContent>
	<m:MaterialPanel grid="l12 m12 s12" textAlign="CENTER"  backgroundColor="BLUE_DARKEN_1">
	<m:MaterialLabel text="REGISTER" fontSize="2.5em"/>
	</m:MaterialPanel>
		<m:MaterialPanel textAlign="CENTER" paddingTop="40" >
	<m:MaterialPanel textAlign="LEFT"  paddingLeft="120" paddingRight="120" ui:field="mp" paddingTop="10">
				<m:MaterialTextBox  ui:field="t1" placeholder="Name" iconType="FACE"></m:MaterialTextBox>
				<m:MaterialTextBox  ui:field="t2" placeholder="Email" iconType="ACCOUNT_CIRCLE"></m:MaterialTextBox>
				<m:MaterialTextBox  ui:field="t3" placeholder="Address" iconType="HOME"></m:MaterialTextBox>
				<m:MaterialTextBox ui:field="t4" placeholder="Phone" type="NUMBER" iconType="CALL"></m:MaterialTextBox>
				<m:MaterialTextBox  ui:field="t5" placeholder="Password" type="PASSWORD" iconType="LOCK"></m:MaterialTextBox>
				<m:MaterialTextBox  ui:field="t6" placeholder="Confirm Password" type="PASSWORD" iconType="LOCK"></m:MaterialTextBox>
				</m:MaterialPanel>
				<m:MaterialPanel textAlign="CENTER" paddingLeft="120" paddingRight="120" paddingBottom="10">
			<m:MaterialButton ui:field="b1" text="Submit" waves="LIGHT" backgroundColor="BLUE_DARKEN_1" textColor="WHITE" />
			</m:MaterialPanel>
		
		</m:MaterialPanel>
		</m:MaterialCardContent>
		</m:MaterialCard>
		<m:MaterialPanel textAlign="CENTER">
	<m:MaterialButton ui:field="b2" text="Back" backgroundColor="WHITE" textColor="BLACK"/>
	</m:MaterialPanel>
		</m:MaterialPanel>
		</m:MaterialRow>
	</g:HTMLPanel>
</ui:UiBinder> 