<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
xmlns:m="urn:import:gwt.material.design.client.ui"
xmlns:ma="urn:import:gwt.material.design.addins.client"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style>
	
	</ui:style>
<g:HTMLPanel>
		
        <m:MaterialIcon ui:field="btnCloseProfile" fontSize="2.5em" iconType="CLOSE" layoutPosition="FIXED" right="20" top="20"/>
        <m:MaterialRow width="80%" paddingTop="40">
            <m:MaterialColumn grid="l4 s12 m12" textAlign="CENTER">
         
                <m:MaterialImage ui:field="imgProfile" url="https://previews.123rf.com/images/jemastock/jemastock1707/jemastock170713069/82545553-delivery-boy-ride-scooter-motorcycle-service-order-shipping-vector-illustration.jpg"  circle="true" />
                <m:MaterialLabel ui:field="lblName" fontSize="2em" marginTop="40" fontWeight="BOLD"/>
               
                <m:MaterialButton ui:field="req" text="Request" waves="DEFAULT" iconType="SEND" iconColor="BLUE" backgroundColor="WHITE" textColor="BLACK" marginBottom="20"/>
            </m:MaterialColumn>
            <m:MaterialColumn grid="l8 s12 m12">
                <!-- Contact Information -->
                <m:MaterialCard marginTop="0">
                    <m:MaterialCardContent>
                        <m:MaterialLabel grid="l10 s10 m10" text="Contact Information" fontSize="1.5em" />
                        <m:MaterialPanel ui:field="infoPanel" marginTop="60">
                            <m:MaterialRow>
                                <m:MaterialLink ui:field="lblEmail"  iconType="MAIL" iconPosition="LEFT" textColor="GREY" fontWeight="BOLD" grid="l8 s8 m8"/>
                                <m:MaterialLabel text="Home" textColor="GREY" grid="l4 s4 m4" textAlign="RIGHT"/>
                            </m:MaterialRow>
                    
                            <m:MaterialRow>
                                <m:MaterialLink ui:field="lblNumber"  iconType="PHONE" iconPosition="LEFT" textColor="GREY" fontWeight="BOLD" grid="l8 s8 m8"/>
                                <m:MaterialLabel text="Home" textColor="GREY" grid="l4 s4 m4" textAlign="RIGHT"/>
                            </m:MaterialRow>
                           
                            <m:MaterialRow>
                                <m:MaterialLink ui:field="lblAddress"   iconType="LOCATION_ON" iconPosition="LEFT" textColor="GREY" fontWeight="BOLD" grid="l8 s8 m8"/>
                                <m:MaterialLabel text="Home" textColor="GREY" grid="l4 s4 m4" textAlign="RIGHT"/>
                            </m:MaterialRow>
                            <m:MaterialRow>
                                <m:MaterialRadioButton name="plan" ui:field="rb1" visible="false"/>
                                </m:MaterialRow>
                                <m:MaterialRow>
                                <m:MaterialRadioButton name="plan" ui:field="rb2" visible="false"/>
                                </m:MaterialRow>
                                <m:MaterialRow>
                                <m:MaterialRadioButton name="plan" ui:field="rb3" visible="false"/>
                                </m:MaterialRow>
                        </m:MaterialPanel>
                    </m:MaterialCardContent>
                </m:MaterialCard>
            </m:MaterialColumn>
        </m:MaterialRow>
 
    </g:HTMLPanel>

</ui:UiBinder> 